<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/award"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="460dp"
        android:layout_marginTop="120dp"
        android:dropDownWidth="match_parent"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />

    <Button
        android:id="@+id/lottery_button"
        android:layout_width="360dp"
        android:layout_height="152dp"
        android:layout_marginStart="460dp"
        android:text="抽選画面へ"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/award" />
        <!--app:layout_constraintTop_toBottomOf="@+id/lottery_num" />-->

    <Spinner
        android:id="@+id/lottery_num"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:dropDownWidth="match_parent"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/award"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />
        <!--app:layout_constraintBottom_toTopOf="@+id/send_button"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.0"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="1.0" />-->
    <!--app:layout_constraintBottom_toTopOf="@+id/lottery_button"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/send_button" />-->

    <Button
        android:id="@+id/send_button"
        android:layout_width="1279dp"
        android:layout_height="61dp"
        android:text="出欠簿"
        android:textSize="30sp"
        android:background="#EEA057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/result_button"
        android:layout_width="180dp"
        android:layout_height="66dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="60dp"
        android:text="これまでの抽選結果"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />


</android.support.constraint.ConstraintLayout>