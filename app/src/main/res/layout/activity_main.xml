<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/award"
        android:layout_width="180dp"
        android:layout_height="59dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="119dp"
        android:dropDownWidth="match_parent"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />

    <Button
        android:id="@+id/lottery_button"
        android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_marginStart="480dp"
        android:layout_marginBottom="320dp"
        android:text="抽選画面へ"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        <!--app:layout_constraintTop_toBottomOf="@+id/lottery_num" />-->

    <Spinner
        android:id="@+id/lottery_num"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginTop="119dp"
        android:dropDownWidth="match_parent"
        android:textAlignment="center"
        android:entries="@array/lottery_num_list"
        app:layout_constraintStart_toEndOf="@+id/award"
        app:layout_constraintTop_toBottomOf="@+id/send_button" />
        <!--app:layout_constraintBottom_toTopOf="@+id/send_button"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.0"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias="1.0" />-->
    <!--app:layout_constraintBottom_toTopOf="@+id/lottery_button"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/send_button" />-->

    <Button
        android:id="@+id/send_button"
        android:layout_width="1279dp"
        android:layout_height="61dp"
        android:text="出欠簿"
        android:textSize="30sp"
        android:background="#EEA057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>