        android:layout_width="450dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="45dp"
        android:textSize="25sp"
        android:text="あなたの抽選番号は" />

    <TextView
        android:id="@+id/random_num"
